@page
@model Inventory.Pages.Models.EditModel

@{
    ViewData["Title"] = "Modifica modello";
}

<h1>Modifica modello</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Model.Id" />
            <div class="form-group">
                <table class="table custom-table">
                    <thead></thead>
                    <tbody>
                        <tr>
                            <td>
                                Nome
                            </td>
                            <td>
                                <input asp-for="Model.Name" class="form-control" />
                                <span asp-validation-for="Model.Name" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Descrizione
                            </td>
                            <td>
                                <input asp-for="Model.Description" class="form-control" />
                                <span asp-validation-for="Model.Description" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Marca
                            </td>
                            <td>
                                <select asp-for="Model.BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                                <span asp-validation-for="Model.BrandId" class="text-danger"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn_crea" />
            </div>
        </form>
    </div>
</div>

<div>
    <p></p>
    <a asp-page="./Index">Annulla e torna all'indice dei modelli</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
