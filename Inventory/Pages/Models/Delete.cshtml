@page
@model Inventory.Pages.Models.DeleteModel

@{
    ViewData["Title"] = "Elimina modello";
}

<h1>Elimina modello</h1>
<p></p>
<p></p>
<h3>Site sicuri di voler eliminare il modello "@Html.DisplayFor(model => model.Model.Name)" ?</h3>
<p></p>
<div>
    
    <dl class="row">
        <dt class="col-sm-2">
            Descrizione
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model.Description)
        </dd>
        <dt class="col-sm-2">
            Marca
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model.Brand.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Model.Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" />
    </form>

    @if (TempData.ContainsKey("Avviso"))
    {
        <p></p>
        <div class="alert alert-warning">
            @TempData["Avviso"]
        </div>
    }
    <p></p>
    <a asp-page="./Index">Annulla e torna all'indice dei modelli</a>
</div>
