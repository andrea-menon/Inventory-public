@page
@model Inventory.Pages.Brands.DeleteModel

@{
    ViewData["Title"] = "Elimina marca";
}

<h1>Elimina marca</h1>
<p></p>
<p></p>
<h3>Site sicuri di voler eliminare la marca "@Html.DisplayFor(model => model.Brand.Name)" ?</h3>
<p></p>
<div> 
    <form method="post">
        <input type="hidden" asp-for="Brand.Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" />
    </form>
    @if (TempData.ContainsKey("Avviso"))
    {
        <p></p>
        <div class="alert alert-warning">            
            @TempData["Avviso"]
        </div>
    }
    <p></p>
    <a asp-page="./Index">Annulla e torna all'indice delle marche</a>
</div>
