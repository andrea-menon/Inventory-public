@page
@model Inventory.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Elimina utente";
}

<h1>Elimina utente</h1>
<p></p>
<p></p>
<h3>Site sicuri di voler eliminare l'utente' "@Html.DisplayFor(model => model.User.Name)" ?</h3>
<p></p>
<div>

    <dl class="row">
        <dt class="col-sm-2">
            Login
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Di)
        </dd>
        <dt class="col-sm-2">
            Centro di costo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.CostCenter.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="User.Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" />
    </form>

    @if (TempData.ContainsKey("Avviso"))
    {
        <p></p>
        <div class="alert alert-warning">
            @TempData["Avviso"]
        </div>
    }
    <p></p>
    <a asp-page="./Index">Annulla e torna all'indice degli utenti</a>
</div>

