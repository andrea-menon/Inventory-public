@page
@model Inventory.Pages.Users.EditModel

@{
    ViewData["Title"] = "Modifica utente";
}

<h1>Modifica utente</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.Id" />
            <div class="form-group">
                <table class="table custom-table">
                    <thead></thead>
                    <tbody>
                        <tr>
                            <td>
                                Nome
                            </td>
                            <td>
                                <input asp-for="User.Name" class="form-control" />
                                <span asp-validation-for="User.Name" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Login
                            </td>
                            <td>
                                <input asp-for="User.Di" class="form-control" />
                                <span asp-validation-for="User.Di" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Centro di costo
                            </td>
                            <td>
                                <select asp-for="User.CostCenterId" class="form-control" asp-items="ViewBag.CostCenterID"></select>
                                <span asp-validation-for="User.CostCenterId" class="text-danger"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn_crea" />
            </div>
        </form>
    </div>
</div>

<div>
    <p></p>
    <a asp-page="./Index">Annulla e torna all'indice degli utenti</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

