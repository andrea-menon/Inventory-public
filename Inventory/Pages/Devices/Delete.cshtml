@page
@model Inventory.Pages.Devices.DeleteModel

@{
    ViewData["Title"] = "Elimina dispositivo";
}

<h1>Elimina dispositivo</h1>
<p></p>
<p></p>
<h3>Site sicuri di voler eliminare il dispositivo "@Html.DisplayFor(model => model.Device.Sn)" ?</h3>
<p></p>
<div>

    <dl class="row">
        <dt class="col-sm-2">
            Modello
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Model.Name)
        </dd>
        <dt class="col-sm-2">
            Descrizione
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Model.Description)
        </dd>
        <dt class="col-sm-2">
            Marca
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Model.Brand.Name)
        </dd>
        <dt class="col-sm-2">
            Ordine d'acquisto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Account.Oa)
        </dd>
        <dt class="col-sm-2">
            Richiesta d'acquisto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Account.Rda)
        </dd>
        <dt class="col-sm-2">
            CAR
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Account.Car)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Device.Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" />
    </form>

    @if (TempData.ContainsKey("Avviso"))
    {
        <p></p>
        <div class="alert alert-warning">
            @TempData["Avviso"]
        </div>
    }
    <p></p>
    <a asp-page="./Index">Annulla e torna all'indice dei dispositivi</a>
</div>
