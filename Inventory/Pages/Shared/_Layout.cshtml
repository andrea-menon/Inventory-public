<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory</title>
    <style>
        .container.full-width {
            width: 100%;
            max-width: 100%;
            padding: 20px;
        }

        main.full-width {
            width: 100%;
            margin: 0;
            padding: 20px;
            display: block;
            unicode-bidi: isolate;
        }
    </style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inventory.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!--
            per impostare un colore di sfondo della barra in alto:
            <nav style="background-color: red !important; " class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        -->
        <nav style="background-color: #007bff !important" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a style="color: #ffffff !important" class="nav-link text-dark" asp-area="" asp-page="/Index">Inizio</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: #ffffff !important" class="nav-link text-dark" asp-area="" asp-page="/Brands/Index">Marche</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: #ffffff !important" class="nav-link text-dark" asp-area="" asp-page="/Models/Index">Modelli</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: #ffffff !important" class="nav-link text-dark" asp-area="" asp-page="/Relations/Index">Dispositivi</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: #ffffff !important" class="nav-link text-dark" asp-area="" asp-page="/Users/Index">Utenti</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: #ffffff !important" class="nav-link text-dark" asp-area="" asp-page="/CostCenters/Index">Centri di costo</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: #ffffff !important" class="nav-link text-dark" asp-area="" asp-page="/Accounts/Index">Ordini</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: #ffffff !important" class="nav-link text-dark" asp-area="" asp-page="/Accedi">Accedi</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container full-width">
        <main role="main" class="pb-3 full-width">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Andrea Menon - <a asp-area="" asp-page="/About">Informazioni</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>