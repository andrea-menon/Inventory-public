@page
@model Inventory.Pages.CostCenters.DeleteModel

@{
    ViewData["Title"] = "Elimina centro di costo";
}

<h1>Elimina centro di costo</h1>
<p></p>
<p></p>
<h3>Site sicuri di voler eliminare il centro di costo "@Html.DisplayFor(model => model.CostCenter.Name)" ?</h3>
<p></p>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Descrizione
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CostCenter.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="CostCenter.Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" />
    </form>
    @if (TempData.ContainsKey("Avviso"))
    {
        <p></p>
        <div class="alert alert-warning">
            @TempData["Avviso"]
        </div>
    }
    <p></p>
    <a asp-page="./Index">Annulla e torna all'indice dei centri di costo</a>
</div>
